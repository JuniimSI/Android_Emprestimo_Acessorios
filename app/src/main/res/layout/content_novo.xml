<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_novo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fundosss"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.juniorf.mylastaplicationandroid.NovoActivity"
    tools:showIn="@layout/activity_novo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:text="Selecione a foto:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_stat_name2"
                    android:id="@+id/imageButton2"
                    android:background="@drawable/my_gradient"

                    android:layout_weight="1"
                    android:backgroundTint="@color/colorDark"
                    android:onClick="voltarFoto" />

                <ImageButton
                    android:layout_width="115dp"
                    android:layout_height="167dp"
                    app:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait"
                    android:id="@+id/imageView6"
                    android:scaleType="fitXY"

                    android:elevation="21dp"
                    style="@android:style/Widget.Holo.ImageButton"
                    android:layout_weight="0.58" />



                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_stat_name"
                    android:id="@+id/imageButton"
                    android:background="@drawable/my_gradient"

                    android:layout_weight="1"
                    android:backgroundTint="@color/colorDark"
                    android:onClick="girarFoto"
                    android:elevation="24dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_alignBaseline="@+id/editTextNome"
                android:layout_alignBottom="@+id/editTextNome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextNome"
                tools:text="Nome"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_alignBaseline="@+id/editTextTelefone"
                android:layout_alignBottom="@+id/editTextTelefone"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextTelefone"
                tools:text="Telefone"
                android:layout_below="@+id/editTextNome"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Endereço"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_alignBaseline="@+id/editTextEndereco"
                android:layout_alignBottom="@+id/editTextEndereco"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextEndereco"
                tools:text="Endereço"
                android:layout_below="@+id/editTextTelefone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCancelar"
                android:onClick="cancelar"
                android:textColor="@color/colorWhite"
                android:background="@drawable/my_gradient"
                android:layout_weight="1.38"
                android:elevation="17dp" />

            <Space
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="0.23" />

            <Button
                android:text="Cadastrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCadastrar"
                android:onClick="cadastrarC"
                android:textColor="@color/colorWhite"
                android:background="@drawable/my_gradient"
                android:layout_weight="1"
                android:elevation="17dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
