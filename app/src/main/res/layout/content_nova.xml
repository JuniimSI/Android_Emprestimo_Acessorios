<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_nova"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fundoss"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.juniorf.mylastaplicationandroid.NovaActivity"
    tools:showIn="@layout/activity_nova">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="121dp"
            app:srcCompat="@drawable/image"
            android:id="@+id/imageView2"
            android:layout_weight="0.18" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Nome"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNome"
                android:layout_weight="0.48"
                android:layout_width="44dp"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:layout_width="wrap_content"

                android:inputType="textPersonName"
                android:ems="10"
                android:textColor="@color/colorAccent"

                android:id="@+id/editTextNome"
                android:layout_weight="1"
                android:layout_height="40dp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Detalhe"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDetalhes"

                android:layout_weight="0.78"
                android:layout_width="44dp"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <EditText
                android:layout_width="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:textColor="@color/colorAccent"
                android:id="@+id/editTextDetalhes"
                android:layout_weight="1.47"
                style="@style/Widget.AppCompat.EditText"
                android:layout_height="40dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="match_parent"
                android:layout_weight="0.15"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCancelar"
                android:textColor="@color/colorWhite"
                android:background="@drawable/my_gradient"
                android:layout_weight="0.5"
                android:onClick="Cancelar"
                android:elevation="21dp" />

            <Button
                android:text="Cadastrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCadastrar"
                android:textColor="@color/colorWhite"
                android:background="@drawable/my_gradient"
                android:layout_weight="0.5"
                android:onClick="Cadastrar"
                android:elevation="19dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
